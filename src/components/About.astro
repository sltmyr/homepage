---
interface Props {
  description: string;
  technologies: {
    name: string;
    icon: string;
  }[];
}

const { description, technologies } = Astro.props;
---

<section id="about" class="py-20 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <h2 class="text-3xl font-bold text-center mb-12">About Me</h2>
    
    <div class="max-w-3xl mx-auto">
      <p class="text-lg text-gray-700 mb-12 leading-relaxed">
        {description}
      </p>
      
      <div>
        <h3 class="text-xl font-semibold mb-6 text-center">Technologies I Love</h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 justify-items-center">
          {technologies.map(tech => (
            <div class="flex flex-col items-center group">
              <div class="w-16 h-16 flex items-center justify-center mb-2 bg-gray-100 rounded-lg p-3 transition-transform group-hover:scale-110">
                <img src={tech.icon} alt={tech.name} class="max-w-full max-h-full" />
              </div>
              <span class="text-sm font-medium text-gray-700">{tech.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section> 